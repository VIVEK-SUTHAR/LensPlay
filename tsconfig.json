{
	"compileOnSave": true,
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"jsx": "react",
		"target": "ES6",
		"lib": ["es5", "dom"],
		"strict": true,
		"paths": {
			"apollo/*": ["./apollo/*"],
			"assets/*": ["./assets/*"],
			"components/*": ["./components/*"],
			"constants/*": ["./constants/*"],
			"hooks/*": ["./hooks/*"],
			"navigation/*": ["./navigation/*"],
			"screens/*": ["./screens/*"],
			"store/*": ["./store/*"],
			"styles/*": ["./styles/*"],
			"customTypes/*": ["./types/*"],
			"utils/*": ["./utils/*"]
		}
	},
	"typeRoots": ["./types/*", "./node_modules/@types/"]
}
